{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./js",
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["js/**/*"],
  "exclude": ["node_modules"]
}
